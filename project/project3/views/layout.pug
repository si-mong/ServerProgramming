doctype html
html
  head
    meta(charset="utf-8")
    title= title
    style.
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font-family: Arial, sans-serif; background: linear-gradient(135deg, #1a0000 0%, #2d0a0a 100%); }
      .container { max-width: 1200px; margin: 0 auto; padding: 20px; }
      .nav { background: #c41e3a; padding: 15px 20px; margin-bottom: 20px; border-bottom: 3px solid #ffd700; }
      .nav a { color: #ffd700; text-decoration: none; margin-right: 20px; padding: 8px 12px; border-radius: 3px; font-weight: bold; }
      .nav a:hover { background: #a01828; color: #fff; }
      h1 { color: #ffd700; margin-bottom: 20px; font-size: 24px; text-shadow: 2px 2px 4px rgba(0,0,0,0.5); }
      h2 { color: #c41e3a; margin: 20px 0 10px 0; font-size: 18px; }
      .card { background: #fff9e6; padding: 20px; border-radius: 6px; margin-bottom: 20px; box-shadow: 0 4px 8px rgba(196,30,58,0.3); border: 2px solid #ffd700; }
      table { border-collapse: collapse; width: 100%; margin: 10px 0; }
      th { background: #c41e3a; color: #ffd700; padding: 10px; text-align: left; font-weight: bold; }
      td { border: 1px solid #f4d03f; padding: 10px; background: #fff; }
      tr:nth-child(even) td { background: #fffef7; }
      .button, button, input[type="submit"] { display: inline-block; padding: 8px 16px; background: #c41e3a; color: #ffd700; text-decoration: none; border: 1px solid #ffd700; border-radius: 3px; cursor: pointer; font-size: 14px; margin: 5px 5px 5px 0; font-weight: bold; }
      .button:hover, button:hover, input[type="submit"]:hover { background: #a01828; color: #fff; }
      .button.danger { background: #8b0000; color: #fff; border-color: #8b0000; }
      .button.danger:hover { background: #600000; }
      .button.success { background: #d4af37; color: #000; border-color: #ffd700; }
      .button.success:hover { background: #ffd700; }
      form { margin: 15px 0; }
      input[type="text"], input[type="number"], select { padding: 8px; border: 2px solid #c41e3a; border-radius: 3px; margin: 5px 5px 5px 0; font-size: 14px; }
      label { display: inline-block; margin-right: 10px; font-weight: bold; color: #2d0a0a; }
      .form-group { margin-bottom: 10px; }
      .status-finished { color: #d4af37; font-weight: bold; }
      .status-pending { color: #c41e3a; font-weight: bold; }
      .empty-state { color: #8b4513; font-style: italic; padding: 20px; text-align: center; }
  body
    .nav
      a(href="/admin/status.html") Status
      a(href="/admin/menu.html?action=stat") Menu
      a(href="/admin/table.html?action=stat") Table
    .container
      h1= title
      block content